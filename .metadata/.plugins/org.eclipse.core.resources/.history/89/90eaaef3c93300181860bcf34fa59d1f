package application;

import java.net.URL;
import java.util.Random;
import java.util.ResourceBundle;

import javafx.animation.FadeTransition;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.fxml.FXML;
import javafx.fxml.Initializable;
import javafx.scene.control.Button;
import javafx.scene.image.*;
import javafx.scene.layout.AnchorPane;
import javafx.util.Duration;

public class ControllerScene2 implements Initializable {
	@FXML
	AnchorPane Pane2;
	@FXML
	public ImageView I;
	public ImageView I2;
	
	//Local
	Hospede [] H;
	
	public void setProperties() {
		int i;
		int canalH;
		int taH,tdH;
		Random gerador = new Random();
		H = new Hospede[3];
		for(i=0; i<3; i++) {
			canalH = gerador.nextInt(4)+1;
			taH = gerador.nextInt(Math.abs(5))+5;
			tdH = gerador.nextInt(Math.abs(5))+5;
			if(i==0) {
				H[i] = new Hospede(I, "hospede_"+i, canalH, taH, tdH);
			}else {
				H[i] = new Hospede(I2, "hospede_"+i, canalH, taH, tdH);
			}
			
			H[i].start();
		}
	}	
	
	@Override
	public void initialize(URL location, ResourceBundle resources) {
		makeFadeInTransition();
		//I2 = new ImageView();
		//setProperties();
	}


	private void makeFadeInTransition() {
		Panel2.setOpacity(0);
		FadeTransition fadeTransition = new FadeTransition(); 
		fadeTransition.setDuration(Duration.millis(1000));
		fadeTransition.setNode(Panel2);
		fadeTransition.setFromValue(0);
		fadeTransition.setToValue(1);
		fadeTransition.play();
	}
}
